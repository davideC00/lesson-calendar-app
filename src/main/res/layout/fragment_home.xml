<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/text_home"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_arrow_left_24px"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="Data di oggi"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_arrow_right_24px"
            android:backgroundTint="@color/cardview_shadow_start_color"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/svLessons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:orientation="vertical"
        android:layout_alignTop="@id/text_home"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="@dimen/padding_time">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include android:id="@+id/calendar" layout="@layout/calendar" />

            <ListView
                android:id="@+id/lvLessons"
                android:layout_width="match_parent"
                android:layout_height="970dp"
                android:layout_marginStart="60dp"
                android:divider="@null"></ListView>

        </FrameLayout>


    </ScrollView>


</RelativeLayout>